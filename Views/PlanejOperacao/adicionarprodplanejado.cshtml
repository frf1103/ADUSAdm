@model FarmPlannerClient.PlanejOperacao.ProdutoPlanejadoViewModel






<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Titulo</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->



<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">

                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-content-above-home-tab" data-toggle="pill" href="#custom-content-above-home" role="tab" aria-controls="custom-content-above-home" aria-selected="true">Dados Cadastrais</a>
                        </li>


                    </ul>

                    <div class="tab-content" id="custom-content-above-tabContent">
                        <div class="tab-pane fade show active" id="custom-content-above-home" role="tabpanel" aria-labelledby="custom-content-above-home-tab">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-action="@ViewBag.Acao">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="id" class="control-label"></label>
                                                    <input asp-for="id" class="form-control" id="id" readonly />
                                                    <input asp-for="idPlanejamento" value=@ViewBag.idplanejamento class="form-control" id="id" hidden />
                                                    <span asp-validation-for="id" class="text-danger"></span>
                                                </div>
                                            </div>
                                     
                                            <div class="col-md-5">
                                                <div class="form-group">

                                                    <label asp-for="idPrincipioAtivo" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <select asp-for="idPrincipioAtivo" id="idprincipio" class="form-control" asp-items="@ViewBag.principios" onchange="changeprincipio(0)"></select>
                                                            
                                                        }
                                                        else
                                                        {
                                                            <select asp-for="idPrincipioAtivo" id="idpricipio" class="form-control" asp-items="@ViewBag.principios" disabled></select>
                                                        }


                                                    }
                                                    <span asp-validation-for="idPrincipioAtivo" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label asp-for="idProduto" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <select asp-for="idProduto" id="idProduto" class="form-control" ></select>
                                                            
                                                        }
                                                        else
                                                        {
                                                            <select asp-for="idProduto" id="idProduto" class="form-control"  disabled></select>
                                                        }
                                                    }
                                                    <span asp-validation-for="idProduto" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="tamanho" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="tamanho"  class="form-control" id="tamanho" onchange="calctotalproduto()" readonly />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="tamanho" class="form-control" readonly  />
                                                        }

                                                    }
                                                    <span asp-validation-for="tamanho" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="areaPercent" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="areaPercent" class="form-control" id="percent" onchange="calctotalproduto()" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="areaPercent" class="form-control" id="percent" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="areaPercent" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="dosagem" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="dosagem" class="form-control" id="dosagem" onchange="calctotalproduto()" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="dosagem" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="dosagem" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="totalProduto" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="totalProduto" class="form-control" id="totalproduto" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="totalProduto" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="totalProduto" class="text-danger"></span>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col text-right">
                                                @{
                                                    if (ViewBag.idacao <= 2)
                                                    {
                                                        <button type="submit" class="btn btn-primary">Salvar</button>
                                                    }
                                                    else
                                                    {
                                                        if (ViewBag.idacao == 3)
                                                        {
                                                            <button type="submit" class="btn btn-primary">Excluir</button>
                                                        }
                                                    }
                                                }

                                                <a href="/planejoperacao/adicionar?acao=2&id=@ViewBag.idplanejamento" class="btn btn-danger">Voltar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>


    <style>
        .custom-no-data {
            text-align: center;
            color: red;
            font-weight: bold;
        }
    </style>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="~/js/loadprodutos.js"></script>




    <script>
        $(document).ready(function () {
            // Adiciona um listener para o evento change

            
            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:,\d{3})+)?(?:\,\d+)?$/.test(value);
            }
            changeprincipio(@ViewBag.idproduto);
            
            // Simula a mudança de valor
        });

       

    function calctotalproduto()
    {
        
        if ($("#dosagem").val()!="") 
          {
            dosagem = parseFloat($("#dosagem").val().replace(",","."));
            if ($("#percent").val()!="") 
          {
            perc = parseFloat($("#percent").val().replace(",", ".")) / 100;
            if ($("#tamanho").val()!="") 
              {
                    tam = parseFloat($("#tamanho").val().replace(",", "."));
                    total=tam*perc*dosagem;
                    formatted = new Intl.NumberFormat('pt-BR').format(total);
                    $("#totalproduto").val(formatted);
              }
            }
        }
        
    }

    function changeprincipio(produto)
    {
        loadprodutos($("#idProduto"),produto, true, $("#idprincipio").val(),0,0,"");
    }

    </script>
}
<!-- /.content -->

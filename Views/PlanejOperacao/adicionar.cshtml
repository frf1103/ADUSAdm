        function fillarea() {
            if ($("#idconfig").val()!="")
            {   var id=$("#idconfig").val();
                $.ajax({
                    type: "get",
                    url: "/configarea/GetAreaConfById?id=" + $("#idconfig").val(),
                    data: {},
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (obj) {
                        if (obj != null) {
                            $("#area").val(obj.area);
                            /*
                            if (tipo == 0) {
                                $('#idtalhao').val(@ViewBag.idtalhao);
                            }
                            */
                        }
                    }
                });
            }

        }


        $(function () {
            $("#jsprodutos").jsGrid({
                width: "100%",
                height: "400px",

                sorting: true,
                paging: true,
                
                onItemUpdating: function (args) {

                },

                autoload: true,
                noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",

                controller: {
                    loadData: function () {
                        return $.ajax({
                            type: "GET",
                            url: "/planejoperacao/getprodplanej?id=" +$("#id").val(),
                            dataType: "json"
                        });
                    }
                },

                fields: [
                    { name: "id", type: "number", width: 20, title: "ID", visible: false },
                    {
                        name: "idtipo", type: "text", width: 20, title: "Tipo"
                    },

                    {                        
                        name: "descricao", type: "text", width: 150, title: "Produto/Principio Ativo"
                    },
                    {
                        name: "dosagem", type: "number", width: 50, align:"left",

                        headerTemplate: function () {
                            return $("<th>").text("Dosagem").addClass("custom-header");
                        }
                    },


                    {
                        type: "control",
                        itemTemplate: function (_, item) {
                            var $result = $("<div>").addClass("dropdown");

                            var $button = $("<button>").addClass("btn btn-info dropdown-toggle")
                                .attr("type", "button")
                                .attr("id", "dropdownMenuButton")
                                .attr("data-toggle", "dropdown")
                                .text("Ações");

                            var $menu = $("<div>").addClass("dropdown-menu")
                                .attr("aria-labelledby", "dropdownMenuButton");

                            var $details = $("<a>").addClass("dropdown-item")
                                .attr("href", "#")
                                .text("Visualizar")
                                .on("click", function () {
                                    window.location.href = '/defareas/adicionartalhao/' + item.id + '?acao=4';
                                });

                            var $edit = $("<a>").addClass("dropdown-item")
                                .attr("href", "#")
                                .text("Editar")
                                .on("click", function () {
                                    window.location.href = '/defareas/adicionartalhao/' + item.id + '?acao=2';
                                });

                            var $delete = $("<a>").addClass("dropdown-item")
                                .attr("href", "#")
                                .text("Excluir")
                                .on("click", function () {
                                    window.location.href = '/defareas/adicionartalhao/' + item.id + '?acao=3';
                                });

                            $menu.append($details).append($edit).append($delete);
                            $result.append($button).append($menu);

                            return $result;
                        }
                    }]
            });
        });



        </script>

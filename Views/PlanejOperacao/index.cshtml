<!-- Content Header (Page header) -->

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />


<style>
    /* Estilo padrão para o ícone */
    .icon-default {
        color: 38b6ff;
    }

    .select2-container {
        width: 250px !important; /* Ajuste o tamanho conforme necessário */
        display: inline-block;
    }

    .form-container {
        display: flex;
        align-items: center;
    }

    .submit-button {
        margin-left: 10px; /* Espaço entre o select e o botão */
    }

    .select2-container {
        width: 100% !important; /* Força a largura de 100% */
    }

    .select2-selection {
        width: 100% !important; /* Força a largura do container de seleção */
    }

    .jsgrid-cell {
        font-size: 0.85em;
        padding: 0.2em !important;
        line-height: 0.8;
    }

    .jsgrid-header-cell {
        font-size: 0.85em;
        padding: 0.2em !important;
        line-height: 1;
    }

    .subgrid {
        padding: 20px ;
    }

   
    

</style>


<!-- Main content -->
<section class="content">
    <form asp-action="Index">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary collapsed-card">
                    <div class="card-header">
                        <h3 class="card-title">Filtro</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-container">

                                    <select class="select2" name="idsafra" id="idsafra" data-placeholder="escolha uma safra" onchange="changesafra()"style="width: 100%;">
                                        <option value="0">escolha uma safra</option>
                                        @foreach (var item in ViewBag.safras)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionS)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                    <select class="select2" name="idvariedade" id="idvariedade" data-placeholder="escolha a variedade" style="width: 100%;">
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-container">
                                    <select class="select2" name="idfazenda" id="idfaz" data-placeholder="escolha a fazenda" onchange="changefaz()"  style="width: 100%;">
                                        <option value="0">escolha a fazenda</option>
                                        @foreach (var item in ViewBag.fazendas)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionF)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>                                    
                                    <select class="select2" name="idtalhao" id="idtalhao" data-placeholder="escolha o talhão" style="width: 100%;">
                                    </select>
                                </div>
                            </div>                       
                            
                        </div>
                        <div class="row">
                            <div class="col-md-3">                                

                                    <select class="select2" name="idoperacao" id="idoperacao" data-placeholder="escolha uma operacao"  style="width: 100%;">
                                        <option value="0">escolha uma operacao</option>
                                        @foreach (var item in ViewBag.operacoes)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionO)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>

                                
                            </div>

                            <div class="col-md-5">
                                <div class="form-container">
                                    <select class="select2" name="idprincipio" id="idprincipio" data-placeholder="escolha um princípio ativo" style="width: 100%;" onchange="changeprincipio(0)">
                                        <option value="0">escolha um princípio ativo</option>
                                        @foreach (var item in ViewBag.principios)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionP)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>

                                    <select class="select2" name="idproduto" id="idproduto" data-placeholder="escolha um produto" style="width: 100%;" >
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-container">

                                    <input type="date" class="form-control" id="dtinicio" value="@ViewBag.dtinicio" name="dtinicio" placeholder="inicio">
                                    <input type="date" class="form-control" id="dtfim" value="@ViewBag.dtfim" name="dtfim" placeholder="fim">

                                    <button type="submit" class="btn btn-md btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>


                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </form>

    <h2>Planejamento de Operações</h2>
    <div class="col text-right">
        @if (ViewBag.permissao == true)
        {
            <a href="/planejoperacao/adicionar?acao=1&idaz=@ViewBag.SelectedOptionF&idsafra=@ViewBag.SelectedOptionS" class=" btn btn-primary"><i class="fas fa-plus icon-default"></i></a>
            <a href="/planejoperacao/assistente" class=" btn btn-primary">Assistente</a>
        }
    </div>
    
    <div id="jsGrid"></div>
    <div id="detailproduto"></div>


</section>
<!-- /.content -->

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid-theme.min.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/tempus-dominus/5.39.0/css/tempus-dominus.min.css" rel="stylesheet">

<style>
    .custom-no-data {
        text-align: center;
        color: red;
        font-weight: bold;
    }
</style>
<!-- Bootstrap 4 -->


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.js"></script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tempus-dominus/5.39.0/js/tempus-dominus.min.js"></script>


<script src="~/js/loadtalhoes.js"></script>
<script src="~/js/loadvariedades.js"></script>
<script src="~/js/loadprodutos.js"></script>

<script>

    

    $(document).ready(function () {


        $('select').select2();
        
       

      


        $("#idfaz").val(@ViewBag.SelectedOptionF);
        //$('#idfazenda').trigger("change");
        changefaz();
        $("#idsafra").val(@ViewBag.SelectedOptionS);
        //$('#idsafra').trigger("change");
        changesafra();
        $("#idprincipio").val(@ViewBag.SelectedOptionP);
        changeprincipio(@ViewBag.idproduto);
        //class=" btn btn-primary" > <i class="fas fa-plus icon-default" > </i></a >

    });

   function changefaz()
   {
       loadtalhoes(@ViewBag.SelectedOptionT,true);
   }

    function changesafra() {
        loadvariedades(@ViewBag.SelectedOptionV,true);
    }
   


    $(function () {
        $("#jsGrid").jsGrid({
            width: "100%",
            height: "420px",

            sorting: true,
            paging: true,
            pageSize: 10,                 // Define o número de registros por página
            pageButtonCount: 5,          // Número de botões de navegação exibidos
            pagerFormat: "Páginas: {pages} {prev} {next} {first} {last}",  // Formato do pager,
            pageLoading: false, 
            pagePrevText: "Anterior", // Texto para o botão "Anterior"
            pageNextText: "Próximo",  // Texto para o botão "Próximo",
            pageFirstText: "Primeira",  // Adicionando "Primeira" página
            pageLastText: "Última",     // Adicionando "Última" página

            autoload: true,
            noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",

          

            controller: {
                loadData: function () {
                    return $.ajax({
                        type: "GET",
                        url: "/planejoperacao/GetData?idsafra=" + $("#idsafra").val() + "&idfazenda=" + $('#idfaz').val() + "&idtalhao=" + @ViewBag.SelectedOptionT+"&idvariedade=" + @ViewBag.SelectedOptionV+"&idoperacao="+@ViewBag.SelectedOptionO+"&ini="+$("#dtinicio").val()+"&fim="+$("#dtfim").val()+"&idprincipio="+@ViewBag.SelectedOptionP+"&idproduto="+$("#idproduto").val(),
                        dataType: "json"
                    });
                }
            },

            fields: [
                { name: "id", type: "number", width: 20, title: "ID", visible: false },
                { name: "descconfig", type: "text", width: 150, title: "Fazenda/Talhão/Variedade" },
                { name: "descoperacao", type: "text", width: 150, title: "Operação" },
                { name: "dataPrevista", type: "text", width: 40, title: "Data Prevista",
                    itemTemplate: function (value) {
                        return new Date (value).toLocaleDateString();
                    }
                },

                {
                    title: "Detalhar Produtos", width: 80, align: "center",
                    itemTemplate: function (value, item) {
                        var $button1 = $("<button>").text("Produtos").addClass("btn btn-primary")
                            .on("click", function () {
                                var $currentRow = $(this).closest("tr");
                                var $subGridRow = $currentRow.next(".subgrid-row1");

                                if ($subGridRow.length) {
                                    $subGridRow.remove(); // Fecha o subgrid1 se já estiver aberto
                                } else {
                                    $(".subgrid-row1").remove(); // Remove qualquer outro subgrid1 aberto


                                    $subGridRow = $("<tr>").addClass("subgrid-row1")
                                    .append($("<td colspan='5'>").addClass("subgrid"));

                                    $currentRow.after($subGridRow);
                                    renderSubGrid1($subGridRow.find(".subgrid"), item.id);
                                }
                            });
                        return $button1;
                    }
                },
                {
                    title: "Detalhar Máquinas", width: 80, align: "center",
                    itemTemplate: function (value, item) {
                        var $button2 = $("<button>").text("Máquinas").addClass("btn btn-primary")
                            .on("click", function () {
                                var $currentRow = $(this).closest("tr");
                                var $subGridRow = $currentRow.next(".subgrid-row1");

                                if ($subGridRow.length) {
                                    $subGridRow.remove(); // Fecha o subgrid1 se já estiver aberto
                                } else {
                                    $(".subgrid-row1").remove(); // Remove qualquer outro subgrid1 aberto


                                    $subGridRow = $("<tr>").addClass("subgrid-row1")
                                        .append($("<td colspan='5'>").addClass("subgrid"));

                                    $currentRow.after($subGridRow);
                                    renderSubGrid2($subGridRow.find(".subgrid"), item.id);
                                }
                            });
                        return $button2;
                    }
                },


                {
                    type: "control",
                    itemTemplate: function (_, item) {
                        var $result = $("<div>").addClass("dropdown");

                        var $button = $("<button>").addClass("btn btn-info dropdown-toggle")
                            .attr("type", "button")
                            .attr("id", "dropdownMenuButton")
                            .attr("data-toggle", "dropdown")
                            .addClass(("@ViewBag.permissao" != "True") ? "disabled" : "")
                            .text("Ações");

                        var $menu = $("<div>").addClass("dropdown-menu")
                            .attr("aria-labelledby", "dropdownMenuButton");

                        var $details = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Visualizar")
                            .on("click", function () {
                                window.location.href = '/planejoperacao/adicionar/' + item.id + '?acao=4';
                            });

                        var $edit = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Editar")
                            .on("click", function () {
                                window.location.href = '/planejoperacao/adicionar/' + item.id + '?acao=2';
                            });

                        var $delete = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Excluir")
                            .on("click", function () {
                                window.location.href = '/planejoperacao/adicionar/' + item.id + '?acao=3';
                            });

                        $menu.append($details).append($edit).append($delete);
                        $result.append($button).append($menu);

                        return $result;
                    }
                }]
        });

        function renderSubGrid1(container,idplanej) {
            container.jsGrid({
                width: "100%",
                height: "200px",
                autoload:true,
                noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",
                controller: {
                loadData: function () {
                    return $.ajax({
                        type: "GET",
                        url: "/planejoperacao/Getprodplanej?id="+idplanej,
                        dataType: "json"
                    });
                }
            },
                fields: [
                    { name: "descprincativo", type: "text", width: 200, title: "Princípio Ativo" },
                    { name: "descproduto", type: "text", width: 200, title: "Produto" },
                    { name: "dosagem", type: "number", width: 80, title: "Dosagem",align: "right",
                    headerTemplate: function () {
                        return $("<div>").text("Dosagem").css("text-align", "right");
                    }},
                    { name: "tamanho", type: "number", width: 80, title: "Área Aplic", align: "right",
                    headerTemplate: function () {
                        return $("<div>").text("Área").css("text-align", "right");
                    }},
                    { name: "totalProduto", type: "number", width: 100, title: "Total Aplic", align: "right",
                        headerTemplate: function () {
                            return $("<div>").text("Total Aplic").css("text-align", "right");
                        }
                    }
                ]
            });
        }

        // Função para renderizar o segundo subgrid
        function renderSubGrid2(container, idplanej) {
            container.jsGrid({
                width: "100%",
                height: "200px",
                noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",
                autoload:true,
                controller: {
                loadData: function () {
                    return $.ajax({
                        type: "GET",
                        url: "/planejoperacao/GetMaquinaPlanej?id="+idplanej,
                        dataType: "json"
                    });
                }
            },
                fields: [
                    { name: "descModelo", type: "text", width: 200, title: "Modelo" },
                    { name: "descMaquina", type: "text", width: 200, title: "Máquina" },
                    { name: "rendimento", type: "number", width: 100, title: "Rendimento",align: "right",
                    headerTemplate: function () {
                        return $("<div>").text("Rendimento(h/ha)").css("text-align", "right");
                    }},
                    { name: "consumo", type: "number", width: 100, title: "Consumo", align: "right",
                    headerTemplate: function () {
                        return $("<div>").text("Consumo(lt/h)").css("text-align", "right");
                    }},
                    {
                        name: "qtdHoraEstimada", type: "number", width: 100, title: "Horas", align: "right",
                        headerTemplate: function () {
                            return $("<div>").text("Horas").css("text-align", "right");
                        }
                    },
                     {
                        name: "qtdCombEstimado", type: "number", width: 100, title: "Combustivel", align: "right",
                        headerTemplate: function () {
                            return $("<div>").text("Combustivel").css("text-align", "right");
                        }
                    }
                ]
            })
        }


    });

    function changeprincipio(produto) {
        loadprodutos($("#idproduto"), produto, true, $("#idprincipio").val(), 0, 0, "");
    }





</script>




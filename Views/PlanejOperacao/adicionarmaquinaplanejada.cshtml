    <style>
        .custom-no-data {
            text-align: center;
            color: red;
            font-weight: bold;
        }
    </style>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="~/js/maquinas.js"></script>




    <script>
        $(document).ready(function () {
            // Adiciona um listener para o evento change


            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:,\d{3})+)?(?:\,\d+)?$/.test(value);
            }
            changemodelo(@ViewBag.idmaquina);

            // Simula a mudança de valor
        });



        function calculos() {
            
            if ($("#rendimento").val() != "") {
                rend = parseFloat($("#rendimento").val().replace(",", "."));
                if (rend!=0) 
                {
                    area = parseFloat(@ViewBag.area);
                    horas=area/rend;
                }
                else 
                {
                    horas=0;
                }
                hformatted = new Intl.NumberFormat('pt-BR').format(horas);
                $("#qhoras").val(hformatted);
                cons = parseFloat($("#consumo").val().replace(",", "."));
                comb = horas * cons;
                cformatted = new Intl.NumberFormat('pt-BR').format(comb);
                $("#qcomb").val(cformatted);
            }            

        }

        function changemodelo(maquina) 
        {
            loadmaquinas($("#idMaquina"), maquina, true, $("#idModeloMaquina").val(), "");
            buscaparametrooperacao($("#idModeloMaquina").val(), $("#idMaquina").val(), $("#config").val(), $("#oper").val(), 0, rendimento, consumo);
            rformatted = new Intl.NumberFormat('pt-BR').format(rendimento.valor);
            $("#rendimento").val(rformatted);
            cformatted = new Intl.NumberFormat('pt-BR').format(consumo.valor);
            $("#consumo").val(cformatted);
            calculos();
        }

        function changemaquina() 
        {
            buscaparametrooperacao($("#idModeloMaquina").val(), $("#idMaquina").val(), $("#config").val(), $("#oper").val(), 0, rendimento, consumo);
            rformatted = new Intl.NumberFormat('pt-BR').format(rendimento.valor);
            $("#rendimento").val(rformatted);
            cformatted = new Intl.NumberFormat('pt-BR').format(consumo.valor);
            $("#consumo").val(cformatted);
            calculos();
        }

    </script>
}
<!-- /.content -->

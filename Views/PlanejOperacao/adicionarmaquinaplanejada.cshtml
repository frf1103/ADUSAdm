@model FarmPlannerClient.PlanejOperacao.MaquinaPlanejadaViewModel






<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Titulo</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->



<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <input id="config" value=@ViewBag.config hidden />
                <input id="oper" value=@ViewBag.operacao hidden />

                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-content-above-home-tab" data-toggle="pill" href="#custom-content-above-home" role="tab" aria-controls="custom-content-above-home" aria-selected="true">Dados Cadastrais</a>
                        </li>


                    </ul>

                    <div class="tab-content" id="custom-content-above-tabContent">
                        <div class="tab-pane fade show active" id="custom-content-above-home" role="tabpanel" aria-labelledby="custom-content-above-home-tab">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-action="@ViewBag.Acao">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="id" class="control-label"></label>
                                                    <input asp-for="id" class="form-control" id="id" readonly />
                                                    <input asp-for="idPlanejamento" value=@ViewBag.idplanejamento class="form-control" id="id" hidden />
                                                    <span asp-validation-for="id" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-5">
                                                <div class="form-group">

                                                    <label asp-for="id" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <select asp-for="idModeloMaquina" id="idModeloMaquina" class="form-control" asp-items="@ViewBag.modelos" onchange="changemodelo(0)"></select>

                                                        }
                                                        else
                                                        {
                                                            <select asp-for="idModeloMaquina" id="idModeloMaquina" class="form-control" asp-items="@ViewBag.modelos" disabled></select>
                                                        }


                                                    }
                                                    <span asp-validation-for="idModeloMaquina" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label asp-for="idMaquina" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <select asp-for="idMaquina" id="idMaquina" class="form-control" onchange="changemaquina()"></select>

                                                        }
                                                        else
                                                        {
                                                            <select asp-for="idMaquina" id="idMaquina" class="form-control" disabled></select>
                                                        }
                                                    }
                                                    <span asp-validation-for="idMaquina" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="rendimento" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="rendimento" class="form-control" id="rendimento" onchange="calctotalproduto()" readonly />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="rendimento" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="rendimento" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="consumo" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="consumo" class="form-control" id="consumo" onchange="calctotalproduto()" readonly />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="consumo" class="form-control" id="consumo" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="consumo" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="qtdHoraEstimada" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="qtdHoraEstimada" class="form-control" id="qhoras" onchange="calctotalproduto()" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="qtdHoraEstimada" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="qtdHoraEstimada" class="text-danger"></span>
                                                </div>
                                            </div>
                                                <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="qtdCombEstimado" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="qtdCombEstimado" class="form-control" id="qcomb" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="qtdCombEstimado" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="qtdCombEstimado" class="text-danger"></span>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col text-right">
                                                @{
                                                    if (ViewBag.idacao <= 2)
                                                    {
                                                        <button type="submit" class="btn btn-success">Salvar</button>
                                                    }
                                                    else
                                                    {
                                                        if (ViewBag.idacao == 3)
                                                        {
                                                            <button type="submit" class="btn btn-danger">Excluir</button>
                                                        }
                                                    }
                                                }

                                                <a href="/planejoperacao/adicionar?acao=2&id=@ViewBag.idplanejamento" class="btn btn-default">Voltar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>

@section scripts
    {

  <style>
    .main-sidebar {
        background-color: #fafafa !important; /* Cor de fundo personalizada */
        display: flex;
        flex-direction: column;
        height: 100vh !important;
        min-height: unset !important;
    }

    .sidebar {
      overflow-x: hidden;
      scrollbar-color: var(--text-color) transparent !important;
    }

    .sidebar a {
      color: var(--text-color) !important; /* Cor do texto */
      font-size: 16px;
    }

    .sidebar a:hover {
      background-color: var(--hover-transparent-background) !important; /* Efeito ao passar o mouse */
    }

    .navbar {
      background-color: #fafafa !important;
    }

    .nav-sidebar .nav-item>.nav-link {
        padding: 0.8rem 0.5rem;
    }

    .nav-sidebar > .nav-item > .nav-treeview {
        padding-left: 0px !important;
    }

        .nav-sidebar > .nav-item > .nav-treeview a {
            padding-left: 1.5em !important;
        }

    .nav-sidebar .nav-link p {
        margin-left: 5px;
    }

    .nav-sidebar .nav-link>.right, .nav-sidebar .nav-link>p>.right {
        top: 50% !important;
    }

    .nav-sidebar .nav-link>.right, .nav-sidebar .nav-item:not(.menu-is-opening) .nav-link>p>.right {
        transform: translateY(-50%);
    }

    .nav-sidebar .menu-is-opening>.nav-link .right, .nav-sidebar .menu-open>.nav-link .right {
        -webkit-transform: translateY(-50%) rotate(-90deg) !important;
        transform: translateY(-50%) rotate(-90deg) !important;
    }

    .nav-sidebar>.nav-item>.nav-treeview {
        padding-left: 1rem;
    }    

    .brand-link {
        padding: 0.5rem !important;
        display: flex !important;
        justify-content: center;
        border-color: #ccc !important;
        background-image: url(images/logoadus.png);
        background-size: 60%;
        background-repeat: no-repeat;
        background-position: center 5px;
        height: 140px;
        max-height: 250px;
        width: auto;
        margin-left: 10px;
    }

    .main-background {
        background-image: url('/img/bg-adus.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
    }

    .main-content {
        background: linear-gradient(to bottom right, #e8f5e9, #a5d6a7);
    }

    .sidebar-collapse .brand-link {
        background-size: 90%;
        background-position: center 25px;
    }

    .user-panel {
        border-color: #ccc !important;
    }

    .navbar .user-nav-item {
        display: flex;
        align-items: center;
        padding: 5px 10px;
    }

    #preferencias {
        font-size: 0.8rem;
    }

    .content-wrapper {
        padding: 20px;
        height: calc(100vh - 56.8px) !important;
        overflow: auto;
    }

  </style>


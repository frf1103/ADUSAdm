@{
    ViewData["Title"] = "ADUS - Início";
}

<style>
    .adus-hero {
        background-image: url('/img/bg-adus.png'); /* Caminho da imagem */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #2e7d32;
        font-family: 'Segoe UI', sans-serif;
    }

        .adus-hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }

    .adus-link {
        margin-top: 20px;
        display: inline-block;
        background-color: #2e7d32;
        color: white;
        padding: 12px 24px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
    }

        .adus-link:hover {
            background-color: #1b5e20;
        }
</style>

<!-- Conteúdo principal -->
<div class="adus-hero">
    <div>
        <h1>Bem-vindo a ADUS</h1>
 
    </div>
</div>


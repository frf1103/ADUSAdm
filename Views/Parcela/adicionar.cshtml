@model ADUSClient.Parcela.ParcelaViewModel

<link rel="stylesheet" href="~/sweetalert2.min.css" />
<link rel="stylesheet" href="~/toastr.min.css" />

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Titulo</h1>
            </div>
        </div>
    </div>
</section>

<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-body">
                    <form asp-action="@ViewBag.acao" method="post" novalidate>
                        <div class="card">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-md-3">
                                        <label asp-for="id"></label>
                                        <input asp-for="id" class="form-control" readonly />
                                    </div>

                                    <div class="col-md-3">
                                        <label asp-for="idassinatura"></label>
                                        <input asp-for="idassinatura" class="form-control" readonly />
                                    </div>

                                    <div class="col-md-2">
                                        <label asp-for="numparcela"></label>
                                        <input asp-for="numparcela" class="form-control" />
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="idcaixa"></label>
                                        <input asp-for="idcaixa" class="form-control" />
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-md-3">
                                        <label asp-for="idformapagto"></label>
                                        <select asp-for="idformapagto" class="form-control" asp-items="ViewBag.Formas"></select>
                                    </div>

                                    <div class="col-md-3">
                                        <label asp-for="datavencimento"></label>
                                        <input asp-for="datavencimento" type="date" class="form-control" />
                                    </div>

                                    <div class="col-md-3">
                                        <label asp-for="databaixa"></label>
                                        <input asp-for="databaixa" type="date" class="form-control" />
                                    </div>

                                    <div class="col-md-3">
                                        <label asp-for="plataforma"></label>
                                        <input asp-for="plataforma" class="form-control" />
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-md-2">
                                        <label asp-for="valor"></label>
                                        <input asp-for="valor" id="valor" class="form-control" type="text" />
                                    </div>
                                    <div class="col-md-2">
                                        <label asp-for="comissao"></label>
                                        
                                        <input asp-for="comissao" id="comissao" class="form-control" />
                                    </div>
                                    <div class="col-md-2">
                                        <label asp-for="descontoplataforma"></label>
                                        <input asp-for="descontoplataforma" id="descontoplataforma" class="form-control" type="text" />
                                    </div>
                                    <div class="col-md-2">
                                        <label asp-for="descontoantecipacao"></label>
                                        <input asp-for="descontoantecipacao" id="descontoantecipacao" class="form-control" type="text" />
                                    </div>
                                    <div class="col-md-2">
                                        <label asp-for="acrescimos"></label>
                                        <input asp-for="acrescimos" id="acrescimos" class="form-control" type="text" />
                                    </div>
                                    <div class="col-md-2">
                                        <label asp-for="descontos"></label>
                                        <input asp-for="descontos" id="descontos" class="form-control" type="text" />
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-md-4">
                                        <label asp-for="valorliquido"></label>
                                        <input asp-for="valorliquido" id="valorliquido" class="form-control" type="text" readonly />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="idcheckout"></label>
                                        <input asp-for="idcheckout" class="form-control" />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="nossonumero"></label>
                                        <input asp-for="nossonumero" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group mt-3">
                                    <label asp-for="observacao"></label>
                                    <textarea asp-for="observacao" class="form-control" rows="3"></textarea>
                                </div>

                            </div>

                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-success">Salvar</button>
                                <a href="/Parcela/Index?idassinatura=@Model.idassinatura" class="btn btn-default">Voltar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:,\d{3})+)?(?:\,\d+)?$/.test(value);
        }



        function calcularValorLiquido() {
            const valor = parseFloat($('#valor').val());
            const descontoPlataforma = parseFloat($('#descontoplataforma').val());
            const comissao = parseFloat($('#comissao').val());
            const descontoAntecipacao = parseFloat($('#descontoantecipacao').val());
            const acrescimos = parseFloat($('#acrescimos').val());
            const descontos = parseFloat($('#descontos').val());

            const liquido = valor - descontoPlataforma - comissao - descontoAntecipacao + acrescimos - descontos;

            $('#valorliquido').val(liquido.toFixed(2));
        }

        $(document).ready(function () {
            const campos = ['#valor', '#descontoplataforma', '#comissao', '#descontoantecipacao', '#acrescimos', '#descontos'];
            campos.forEach(c => $(c).on('input', calcularValorLiquido));
            calcularValorLiquido();
        });
    </script>
}
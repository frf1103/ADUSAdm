        function calculartotal() {
            var qtd = parseFloat($("#qtdcompra").val().replace(",","."));
            var preco = parseFloat($("#preco").val().replace(",", "."));
            var total=qtd*preco;
            formatted = new Intl.NumberFormat('pt-BR').format(total);
            $("#total").val(total);

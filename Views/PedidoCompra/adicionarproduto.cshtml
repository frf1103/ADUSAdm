@model FarmPlannerClient.PedidoCompra.ProdutoCompraViewModel






<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Titulo</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->



<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">

                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-content-above-home-tab" data-toggle="pill" href="#custom-content-above-home" role="tab" aria-controls="custom-content-above-home" aria-selected="true">Dados Cadastrais</a>
                        </li>


                    </ul>

                    <div class="tab-content" id="custom-content-above-tabContent">
                        <div class="tab-pane fade show active" id="custom-content-above-home" role="tabpanel" aria-labelledby="custom-content-above-home-tab">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-action="@ViewBag.Acao">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label asp-for="id" class="control-label"></label>
                                                    <input asp-for="id" class="form-control" id="id" readonly />
                                                    <input asp-for="idpedido" value=@ViewBag.idpedido class="form-control" id="id" hidden />
                                                    <span asp-validation-for="id" class="text-danger"></span>
                                                </div>
                                            </div>
                                     


                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    <label asp-for="idproduto" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <select asp-for="idproduto" id="idproduto" class="form-control" asp-items="@ViewBag.produtos"></select>
                                                            
                                                        }
                                                        else
                                                        {
                                                            <select asp-for="idproduto" id="idproduto" class="form-control" asp-items="@ViewBag.produtos" disabled></select>
                                                        }
                                                    }
                                                    <span asp-validation-for="idproduto" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="qtdcompra" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="qtdcompra" class="form-control" id="qtdcompra" onchange="calculartotal()" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="qtdcompra" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="qtdcompra" class="text-danger"></span>

                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="preco" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="preco" class="form-control" id="preco" onchange="calculartotal()" />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="preco" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="preco" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="total" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="total" class="form-control" id="total" readonly />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="total" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="preco" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="recebido" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {
                                                            <input asp-for="recebido" class="form-control" id="recebido" readonly />
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="recebido" class="form-control" readonly />
                                                        }

                                                    }
                                                    <span asp-validation-for="recebido" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col text-right">
                                                @{
                                                    if (ViewBag.idacao <= 2)
                                                    {
                                                        <button type="submit" class="btn btn-success">Salvar</button>
                                                    }
                                                    else
                                                    {
                                                        if (ViewBag.idacao == 3)
                                                        {
                                                            <button type="submit" class="btn btn-danger">Excluir</button>
                                                        }
                                                    }
                                                }
                                                
                                                <a href="/pedidocompra/adicionar?acao=2&id=@ViewBag.idpedido" class="btn btn-default">Voltar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>


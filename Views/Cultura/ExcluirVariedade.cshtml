@model FarmPlannerClient.Variedade.VariedadeViewModel


<link rel="stylesheet" href="~/sweetalert2.min.css">
<!-- Toastr -->
<link rel="stylesheet" href="~/toastr.min.css">


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Excluir uma Variedade</h1>
                <h1>Cultura: @ViewBag.Desccultura</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->


<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-content-above-home-tab" data-toggle="pill" href="#custom-content-above-home" role="tab" aria-controls="custom-content-above-home" aria-selected="true">Principal</a>
                        </li>                        
                        
                    </ul>
                    <div class="tab-content" id="custom-content-above-tabContent">
                        <div class="tab-pane fade show active" id="custom-content-above-home" role="tabpanel" aria-labelledby="custom-content-above-home-tab">
                            <form asp-action="excluirvariedade">
                                <div class="card">
                                    <div class="card-body">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="id" class="control-label"></label>
                                            <input asp-for="id" class="form-control" readonly />
                                            <span asp-validation-for="id" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="descricao" class="control-label"></label>
                                            <input asp-for="descricao" class="form-control" readonly />
                                            <span asp-validation-for="descricao" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="codigoExterno" class="control-label"></label>
                                            <input asp-for="codigoExterno" class="form-control" readonly/>
                                            <span asp-validation-for="codigoExterno" class="text-danger"></span>
                                        <div class="form-group">
                                            <label asp-for="ciclo" class="control-label"></label>
                                                <input asp-for="ciclo" class="form-control" readonly />
                                            <span asp-validation-for="ciclo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="idTecnologia" class="control-label"></label>
                                                <select asp-for="idTecnologia" class="form-control" readonly asp-items="@ViewBag.Tecnologias" id="idTecnologia"></select>
                                            <span asp-validation-for="idTecnologia" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="idCultura" class="form-control" value=@ViewBag.idcultura hidden/>

                                        </div>


                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col text-right">
                                                <button type="submit" class="btn btn-primary">Excluir</button>
                                                <a href="/cultura/editar/@ViewBag.idcultura" class="btn btn-danger">Voltar</a>
                                            </div>                                     
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>                      
                        

                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>

@section scripts {
    <script>


    </script>
}

<!-- /.content -->
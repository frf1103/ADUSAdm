<script>

    $(document).ready(function () {

        $('#idgrupo').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
            closeOnSelect: true


        });
        $('#idprincipio').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
            closeOnSelect: true


        });
        $('#idfab').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
            closeOnSelect: true


        });


    });

    $(function () {
        $("#jsGrid").jsGrid({
            width: "100%",
            height: "400px",

            sorting: true,
            paging: true,
                        pageSize: 10,                 // Define o número de registros por página
            pageButtonCount: 5,          // Número de botões de navegação exibidos
            pagerFormat: "Páginas: {pages} {prev} {next} {first} {last}",  // Formato do pager,
            pageLoading: false, 
            pagePrevText: "Anterior", // Texto para o botão "Anterior"
            pageNextText: "Próximo",  // Texto para o botão "Próximo",
            pageFirstText: "Primeira",  // Adicionando "Primeira" página
            pageLastText: "Última",     // Adicionando "Última" página


            autoload: true,
            noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",

            controller: {
                loadData: function () {
                    return $.ajax({
                        type: "GET",
                        url: "/produto/GetData?idgrupo=" + $("#idgrupo").val() + "&idprincipio=" + $('#idprincipio').val() + "&idfab=" + $('#idfab').val()+"&filtro=@ViewBag.filtro",
                        dataType: "json"
                    });
                }
            },

            fields: [
                { name: "id", type: "number", width: 20, title: "ID", visible: false },
                { name: "descricao", type: "text", width: 200, title: "Descrição" },                
                { name: "descfab", type: "text", width: 100, title: "Fabricante" },
                {
                    type: "control",
                    headerTemplate: function () {
                        // Personalizando o header da coluna de controle
                        var $header = $("<th>")
                            .attr("title", "Princípios Ativos") // Adicionando o tooltip com title
                            .text("Princípios Ativos"); // Texto do header
                        return $header;
                    },
                    itemTemplate: function (value, item) {
                        var $detailButton = $("<button>")
                            .text("Ver")
                            .addClass("btn btn-primary")
                            .attr("title", "Ver")
                            .on("click", function () {
                                toggleDetails(item); // Alternar o grid de detalhes
                            });

                        return $detailButton;
                    }
                },

                {
                    type: "control",
                    itemTemplate: function (_, item) {
                        var $result = $("<div>").addClass("dropdown");

                        var $button = $("<button>").addClass("btn btn-info dropdown-toggle")
                            .attr("type", "button")
                            .attr("id", "dropdownMenuButton")
                            .attr("data-toggle", "dropdown")
                            .text("Ações");

                        var $menu = $("<div>").addClass("dropdown-menu")
                            .attr("aria-labelledby", "dropdownMenuButton");

                        var $details = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Visualizar")
                            .addClass("")
                            .on("click", function () {
                                window.location.href = '/produto/adicionar/' + item.id + '?acao=4';
                            });

                        var $edit = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Editar")
                            .on("click", function () {
                                window.location.href = '/produto/adicionar/' + item.id + '?acao=2';
                            });

                        var $delete = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Excluir")
                            .on("click", function () {
                                window.location.href = '/produto/adicionar/' + item.id + '?acao=3';
                            });
                        var $principio = $("<a>").addClass("dropdown-item")
                            .attr("href", "#")
                            .text("Definir Princípio Ativo")
                            .on("click", function () {
                                window.location.href = '/produto/adicionarprodutoprincipio?idproduto=' + item.id+"&idprincipio=0" + "&descproduto="+item.descricao+"&acao=1";
                            });


                        $menu.append($details).append($edit).append($delete).append($principio);
                        $result.append($button).append($menu);

                        return $result;
                    }
                }]
        });


        function toggleDetails(produto) {           


            var $row = $("#jsGrid").jsGrid("rowByItem", produto);

            // Verificar se o grid de detalhes já está visível
            if ($("#detailGrid").is(":visible") && $("#detailGrid").data("idproduto") === produto.id) {
                $("#detailGrid").hide(); // Ocultar o grid se ele já estiver visível para o mesmo cliente
            } else {
                // Inserir o template do grid de detalhes abaixo da linha selecionada
                $row.after($("#detailTemplate").html());
                $("#detailGrid").jsGrid({
                    width: "100%",
                    height: "300px",
                    inserting: false,
                    editing: false,
                    sorting: false,
                    paging: false,
                    autoload: true,
                    
                    noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",

                    controller: {
                        loadData: function () {
                            return $.ajax({
                                type: "GET",
                                url: "/produto/Getprincipioproduto?idproduto=" + produto.id,
                                dataType: "json"
                            });
                        }
                    },
                    fields: [                        
                        { name: "id", title: "Princípio Ativo", type: "text",visible:false, width: 20 },
                        { name: "descricao", title: "Descrição", type: "text", visible: false, width: 200 },
                        {
                            type: "control",
                            itemTemplate: function (_, item) {
                                var $result = $("<div>").addClass("dropdown");

                                var $button = $("<button>").addClass("btn btn-info dropdown-toggle")
                                    .attr("type", "button")
                                    .attr("id", "dropdownMenuButton")
                                    .attr("data-toggle", "dropdown")
                                    .text("Ações");

                                var $menu = $("<div>").addClass("dropdown-menu")
                                    .attr("aria-labelledby", "dropdownMenuButton");


                                var $edit = $("<a>").addClass("dropdown-item")
                                    .attr("href", "#")
                                    .text("Editar")
                                    .addClass("disabled")
                                    .on("click", function () {
                                        window.location.href = '/produto/adicionarprodutoprincipio?idproduto=' + item.idproduto+'&idprincipio='+item.idprincipio + '&acao=2';
                                    });

                                var $delete = $("<a>").addClass("dropdown-item")
                                    .attr("href", "#")
                                    .text("Excluir")
                                    .on("click", function () {
                                        window.location.href = '/produto/adicionarprodutoprincipio?idproduto=' + item.idproduto + '&idprincipio=' + item.idprincipio + '&acao=3';
                                    });

                                $menu.append($edit).append($delete);
                                $result.append($button).append($menu);

                                return $result;
                            }
                        }
                    ]
                });
                $("#detailGrid").insertAfter($row).show();
                $("#detailGrid").data("idproduto", produto.id);
                $("#detailGrid").jsGrid("refresh");
            }
        }

       

    });




</script>




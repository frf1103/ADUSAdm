<!-- Content Header (Page header) -->

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />


<style>
    /* Estilo padrão para o ícone */
    .icon-default {
        color: 38b6ff;
    }

    .jsgrid-detail-grid {
        display: block;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .jsgrid .jsgrid-grid-body, .jsgrid .jsgrid-header {
        width: 100%;

    }

</style>


<!-- Main content -->
<section class="content">
    <form asp-action="Index">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary collapsed-card">
                    <div class="card-header">
                        <h3 class="card-title">Filtro</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">

                                    <select class="select2" name="idprincipio" id="idprincipio" data-placeholder="escolha o principio ativo" style="width: 100%;">
                                        <option value="0">escolha o principio atigo</option>
                                        @foreach (var item in ViewBag.principios)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionPR)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>

                                </div>

                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <select class="select2" name="idfab" id="idfab" data-placeholder="escolha o fabricante" style="width: 100%;">
                                        <option value="0">escolha o fabricante</option>
                                        @foreach (var item in ViewBag.fabricantes)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionP)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">

                                    <select class="select2" name="idgrupo" id="idgrupo" data-placeholder="escolha o grupo" style="width: 100%;">
                                        <option value="0">escolha o grupo</option>
                                        @foreach (var item in ViewBag.grupos)
                                        {
                                            if (@item.Value == ViewBag.SelectedOptionG)
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }

                                        }
                                    </select>

                                </div>

                            </div>
                            <div class="col-md-5">
                                <div class="input-group">

                                    <input type="search" class="form-control form-control-md" name="filtro" value="@ViewBag.filtro" placeholder="busca por nome,registro ou máscara">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-md btn-default">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </form>

    <h2>Produtos</h2>
    <div class="col text-right">
        <a href="/produto/adicionar?acao=1" class=" btn btn-primary"><i class="fas fa-plus icon-default"></i></a>

    </div>

    <div id="jsGrid"></div>
    
    <div id="detailGrid" class="jsgrid-detail-grid" style="display:none;"></div>
    

</section>
<!-- /.content -->


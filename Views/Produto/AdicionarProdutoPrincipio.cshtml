@model FarmPlannerClient.Produto.ProdutoPrincipioViewModel




<link rel="stylesheet" href="~/sweetalert2.min.css">
<!-- Toastr -->
<link rel="stylesheet" href="~/toastr.min.css">


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Titulo</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->



<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">

                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-content-above-home-tab" data-toggle="pill" href="#custom-content-above-home" role="tab" aria-controls="custom-content-above-home" aria-selected="true">Dados Cadastrais</a>
                        </li>

                    </ul>

                    <div class="tab-content" id="custom-content-above-tabContent">
                        <div class="tab-pane fade show active" id="custom-content-above-home" role="tabpanel" aria-labelledby="custom-content-above-home-tab">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-action="@ViewBag.Acao">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">


                                                    <label asp-for="idprincipio" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 1)
                                                        {

                                                            <select asp-for="idprincipio" id="idprinc" class="form-control" asp-items="@ViewBag.principios"></select>

                                                        }
                                                        else
                                                        {
                                                            <select asp-for="idprincipio" id="idprinc" class="form-control" value=@ViewBag.idprinc asp-items="@ViewBag.principios" disabled></select>
                                                        }
                                                        <span asp-validation-for="idprincipio" class="text-danger"></span>

                                                    }

                                                </div>
                                            </div>
                                            <input asp-for="idproduto" id="idproduto" hidden class="form-control"></input>
                                            <input asp-for="descproduto" id="descproduto" hidden class="form-control"></input>
                                            <input asp-for="idprincipio" id="idpric" hidden class="form-control"></input>
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label asp-for="quantidade" class="control-label"></label>
                                                    @{
                                                        if (ViewBag.idacao <= 2)
                                                        {

                                                            <input asp-for="quantidade" id="idqtd" class="form-control" ></input>

                                                        }
                                                        else
                                                        {
                                                            <input asp-for="quantidade" id="idqtd" class="form-control"  disabled></input>
                                                        }
                                                        <span asp-validation-for="quantidade" class="text-danger"></span>

                                                    }

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col text-right">
                                                @{
                                                    if (ViewBag.idacao <= 2)
                                                    {
                                                        <button type="submit" class="btn btn-success">Salvar</button>
                                                    }
                                                    else
                                                    {
                                                        if (ViewBag.idacao == 3)
                                                        {
                                                            <button type="submit" class="btn btn-danger">Excluir</button>
                                                        }
                                                    }
                                                }

                                                <a href="/produto/index" class="btn btn-default">Voltar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>

<style>
    .custom-no-data {
        text-align: center;
        color: red;
        font-weight: bold;
    }

    .align-right {
        text-align: right;
    }
</style>

@section scripts
    {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/jsgrid@1.5.3/dist/jsgrid.min.js"></script>
    <script src="~/js/Comuns.js"></script>

    <script>
        $(document).ready(function () {
            // Adiciona um listener para o evento change


            // Simula a mudança de valor
        });

    </script>
}
<!-- /.content -->

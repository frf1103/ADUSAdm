        function renderSubGrid1(container, idplanej) {
            container.jsGrid({
                width: "100%",
                height: "auto",
                autoload: true,
                noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",
                controller: {
                    loadData: function () {
                        return $.ajax({
                            type: "GET",
                            url: "/custoindireto/Getgrupos?idclasse=" + idplanej,
                            dataType: "json"
                        });
                    }
                },
                fields: [
                    { name: "id", type: "number", width: 20, title: "ID", visible: false },

                    {
                        name: "descricao", type: "text", width: 100, title: "Grupo de Conta"
                    },

                    {
                        title: "Contas", width: 30, align: "center",
                        itemTemplate: function (value, item) {
                            var $button1 = $("<button>").text("Ver").addClass("btn btn-primary")
                                .on("click", function () {
                                    var $currentRow = $(this).closest("tr");
                                    var $subGridRow = $currentRow.next(".subgrid-row2");

                                    if ($subGridRow.length) {
                                        $subGridRow.remove(); // Fecha o subgrid1 se já estiver aberto
                                    } else {
                                        $(".subgrid-row2").remove(); // Remove qualquer outro subgrid1 aberto


                                        $subGridRow = $("<tr>").addClass("subgrid-row2")
                                            .append($("<td colspan='3'>").addClass("subgridM"));

                                        $currentRow.after($subGridRow);
                                        renderSubGrid2($subGridRow.find(".subgridM"), item.id);
                                    }
                                });
                                return $button1
                            }
                    },
                    {
                        title: "Ações", width: 30, align: "center",
                    itemTemplate: function (value, item) {


                            var $addButton = $("<button>")
                                .addClass("group-button") // Usa a classe personalizada sem o "X"
                                .append($("<i>").addClass("fas fa-plus"))
                                .attr("title", "Definir Contas")
                                .addClass(("@ViewBag.permissao" != "True") ? "disabled" : "")
                                .on("click", function (e) {
                                    window.location.href = '/custoindireto/adicionarconta/0' +  '?acao=1&idgrupo='+item.id;
                                });

                            var $editButton = $("<button>")
                                .addClass("group-button") // Usa a classe personalizada sem o "X"
                                .append($("<i>").addClass("fas fa-edit"))
                                .attr("title", "Editar")
                                .addClass(("@ViewBag.permissao" != "True") ? "disabled" : "")
                                .on("click", function (e) {
                                    window.location.href = '/custoindireto/adicionargrupoconta/' + item.id + '?acao=2';
                                });
                            var $deleteButton = $("<button>")
                                .addClass("group-button") // Usa a classe personalizada sem o "X"
                                .append($("<i>").addClass("fas fa-trash"))
                                .attr("title", "Excluir")
                                .addClass(("@ViewBag.permissao" != "True") ? "disabled" : "")
                                .on("click", function (e) {
                                    window.location.href = '/custoindireto/adicionargrupoconta/' + item.id + '?acao=3';
                                });


                            return $("<div>").append($addButton).append($editButton).append($deleteButton);
                        }
                    }


                ]
            });



            function renderSubGrid2(container, idplanej) {
                container.jsGrid({
                    width: "100%",
                    height: "auto",
                    autoload: true,
                    noDataContent: "<div class='custom-no-data'>Nenhum dado encontrado</div>",
                    controller: {
                        loadData: function () {
                            return $.ajax({
                                type: "GET",
                                url: "/custoindireto/Getcontas?idgrupo=" + idplanej,
                                dataType: "json"
                            });
                        }
                    },
                    fields: [
                        { name: "id", type: "number", width: 20, title: "ID", visible: false },

                        {
                            name: "descricao", type: "text", width: 100, title: "Conta"
                        },


                        {
                            title: "Ações", width: 30, align: "center",
                            itemTemplate: function (value, item) {
                                var $editButton = $("<button>")
                                    .addClass("group-button") // Usa a classe personalizada sem o "X"
                                    .append($("<i>").addClass("fas fa-edit"))
                                    .attr("title", "Editar")
                                    .addClass(("@ViewBag.permissao" != "True") ? "disabled" : "")
                                    .on("click", function (e) {
                                        window.location.href = '/custoindireto/adicionarconta/' + item.id + '?acao=2';
                                    });
                                var $deleteButton = $("<button>")
                                    .addClass("group-button") // Usa a classe personalizada sem o "X"
                                    .append($("<i>").addClass("fas fa-trash"))
                                    .attr("title", "Excluir")
                                    .addClass(("@ViewBag.permissao" != "True") ? "disabled" : "")
                                    .on("click", function (e) {
                                        window.location.href = '/custoindireto/adicionarconta/' + item.id + '?acao=3';
                                    });


                                return $("<div>").append($editButton).append($deleteButton);
                            }
                        }

                    ]
                });
            }





        }


       

    });




</script>




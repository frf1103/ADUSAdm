@model ADUSClient.Moeda.CotacaoMoedaViewModel


<link rel="stylesheet" href="~/sweetalert2.min.css">
<!-- Toastr -->
<link rel="stylesheet" href="~/toastr.min.css">


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Adicionar uma Cotacão</h1>
                <h1>Moeda: @ViewBag.Descmoeda</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->


<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-content-above-home-tab" data-toggle="pill" href="#custom-content-above-home" role="tab" aria-controls="custom-content-above-home" aria-selected="true">Principal</a>
                        </li>                        
                        
                    </ul>
                    <div class="tab-content" id="custom-content-above-tabContent">
                        <div class="tab-pane fade show active" id="custom-content-above-home" role="tabpanel" aria-labelledby="custom-content-above-home-tab">
                            <form asp-action="adicionarcotacao" method="post">
                                <div class="card">
                                    <div class="card-body">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="id" class="control-label"></label>
                                            <input asp-for="id" class="form-control" readonly />
                                            <span asp-validation-for="id" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="cotacaoData" class="control-label"></label>
                                            <input asp-for="cotacaoData" class="form-control" />
                                            <span asp-validation-for="cotacaoData" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="cotacaoValor" class="control-label"></label>
                                            <input asp-for="cotacaoValor" class="form-control" />
                                            <span asp-validation-for="cotacaoValor" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="idMoeda" class="form-control" value=@ViewBag.idmoeda hidden/>
                                            <input asp-for="descmoeda" class="form-control" value=@ViewBag.Descmoeda hidden />

                                        </div>


                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col text-right">
                                                <button type="submit" class="btn btn-primary">Salvar</button>
                                                <a href="/moeda/editar/@ViewBag.idmoeda" class="btn btn-danger">Voltar</a>
                                            </div>                                     
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>                      
                        

                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Adiciona um listener para o evento change

            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:,\d{3})+)?(?:\,\d+)?$/.test(value);
            }

            // Simula a mudança de valor
        });

    </script>
}

<!-- /.content -->